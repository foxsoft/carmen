= content_for(:title) { t(".title") }

%header.main-content__header{:role => "banner"}
  %h1.main-content__page-title
    = t(".title")
  %div
%section.main-content__body
  %p= t(".description")
  = simple_form_for :password_reset, url: account_password_path(@user, token: @user.confirmation_token), html: { method: :put } do |f|
    = f.input :password
    .form-actions
      = f.button :submit
      or
      = link_to t('layouts.application.sign_in'), sign_in_path
      instead
